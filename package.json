{
  "name": "tally-mcp",
  "version": "1.0.0",
  "description": "MCP (Model Context Protocol) server for Tally.so form management and automation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "watch": "nodemon --exec ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist",
    "inspector": "npm run build && npx @modelcontextprotocol/inspector node dist/index.js",
    "inspector:dev": "npx @modelcontextprotocol/inspector node_modules/.bin/ts-node src/index.ts",
    "inspector:test": "node scripts/test-inspector.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "tally",
    "forms",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@types/cors": "^2.8.18",
    "@types/dompurify": "^3.0.5",
    "@types/helmet": "^0.0.48",
    "@types/redis": "^4.0.10",
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "isomorphic-dompurify": "^2.25.0",
    "jsonwebtoken": "^9.0.2",
    "papaparse": "^5.5.3",
    "redis": "^5.5.6",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0",
    "zod": "^3.25.51"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.14.0",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.29",
    "@types/papaparse": "^5.3.16",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "eventsource": "^2.0.2",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2"
  }
}
